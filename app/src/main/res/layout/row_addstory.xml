<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@null"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="70dp"
            app:c_border_color="@color/colorgray"
            android:id="@+id/dpimg"
            android:layout_centerHorizontal="true"
            app:c_border_width="3dp"
            android:src="@drawable/ic_image_black"
            android:layout_height="70dp"></com.blogspot.atifsoftwares.circularimageview.CircularImageView>

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="30dp"
            android:id="@+id/stroy_plus"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            app:c_border_width="1dp"
            android:src="@drawable/ic_addpost_green"
            android:layout_height="30dp"></com.blogspot.atifsoftwares.circularimageview.CircularImageView>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="sasadadsa"
        android:maxLines="1"
        android:id="@+id/addstroy_text"
        android:textColor="@color/daynight_textColor2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>