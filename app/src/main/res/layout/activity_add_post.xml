<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <EditText
            android:id="@+id/pTitleEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="sample"
            android:visibility="gone"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="Enter title"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/switchColor"
            android:textColorHint="@color/switchColor"></EditText>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:cardMaxElevation="20dp"
        android:id="@+id/cardview">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="350dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_height="350dp"
            android:background="@drawable/ic_image_black"
            android:minHeight="200dp"
            android:id="@+id/pImageIv"
            android:scaleType="fitCenter"
            ></ImageView>

        <VideoView
            android:layout_width="match_parent"
            android:minHeight="200dp"
            android:visibility="gone"
            android:id="@+id/pVideoVv"
            android:scaleType="fitCenter"
            android:layout_height="400dp"></VideoView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/cardview"
        android:layout_marginTop="-59dp"
        android:id="@+id/linear"
        app:cardElevation="1dp"
        android:padding="10dp"
        app:cardMaxElevation="20dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <EditText
            android:id="@+id/pDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/cardview"
           android:layout_marginTop="120dp"
            android:padding="30dp"
            android:background="@drawable/descriptionbox"
            android:fontFamily="serif-monospace"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"></EditText>
    </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/pUploadBtn"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:textColor="#fff"
            android:padding="20dp"
            android:layout_below="@id/linear"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button2"
            android:layout_marginTop="-30dp"
            android:textSize="20dp"
            android:text="Post"></Button>




</RelativeLayout>



    </LinearLayout>

</ScrollView>